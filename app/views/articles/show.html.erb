
<h1><%= @article.title %></h1>
<%= link_to ('<i class="fa-solid fa-pen"></i>').html_safe, edit_article_path %>

<%= link_to ('<i class="fa-solid fa-trash"></i>').html_safe,
            article_path(@article),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<p><%= @article.content %></p>
