
  <%= simple_form_for @article, :html => {:class => "form-horizontal center"} do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title:", class: "col-md-4 control-label m-3" %>
          <div class="col-md-8 m-3">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :content, "Content:", class: "col-md-4 control-label m-3" %>
          <div class="col-md-8 mb-3">
            <%= f.text_area :content, class: "form-control m-3",  rows: 6 %>
          </div>
        </div>
        <%= f.submit "Submit", class: "btn btn-default btn-success m-3" %>
   <% end %>

  <div class="m-3">
    <%= link_to 'Back', articles_path, {class: "btn btn-default btn-primary"} %>
  </div>
